<?xml version="1.0" encoding="utf-8"?>
<remote-actions version="1.2" >
    <action
        id="air_scroll_up"
        label="@string/air_command_scroll_up"
        priority="1"
        trigger_key="CTRL_LEFT+SHIFT_LEFT+F1" >
        <preference
            name="gesture"
            value="swipe_up" />
        <preference
            name="motion_only"
            value="true" />
    </action>

    <action
        id="air_scroll_down"
        label="@string/air_command_scroll_down"
        priority="2"
        trigger_key="CTRL_LEFT+ALT_LEFT+F1" >
        <preference
            name="gesture"
            value="swipe_down" />
        <preference
            name="motion_only"
            value="true" />
    </action>
</remote-actions>